# iFlytek星火大模型配置
# 请在 .env.local 文件中配置您的真实API密钥

# 讯飞星火API配置
VUE_APP_IFLYTEK_API_URL=https://spark-api.xf-yun.com
VUE_APP_IFLYTEK_APP_ID=your_app_id_here
VUE_APP_IFLYTEK_API_KEY=your_api_key_here
VUE_APP_IFLYTEK_API_SECRET=your_api_secret_here

# 讯飞星火模型版本
VUE_APP_IFLYTEK_MODEL_VERSION=v3.5

# 多模态功能配置
VUE_APP_ENABLE_MULTIMODAL=true
VUE_APP_ENABLE_VOICE_RECOGNITION=true
VUE_APP_ENABLE_VIDEO_ANALYSIS=true
VUE_APP_ENABLE_REAL_TIME_ANALYSIS=true

# 面试系统配置
VUE_APP_INTERVIEW_SESSION_TIMEOUT=3600000
VUE_APP_MAX_QUESTION_COUNT=10
VUE_APP_DEFAULT_INTERVIEW_DOMAIN=comprehensive

# 后端API配置
VUE_APP_API_URL=http://localhost:8000

# 开发模式配置
VUE_APP_DEBUG_MODE=false
VUE_APP_MOCK_API_RESPONSES=false
