# 开发环境配置
VITE_API_BASE_URL=http://localhost:8000

# 应用配置
VITE_APP_TITLE=智能面试评估系统
VITE_APP_VERSION=1.0.0

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=true

# iFlytek星火大模型配置
# 注意：请在生产环境中使用真实的API密钥
# 当前使用模拟模式进行开发测试

# 讯飞星火API配置
VITE_IFLYTEK_API_URL=https://spark-api.xf-yun.com
VITE_IFLYTEK_APP_ID=simulation_mode
VITE_IFLYTEK_API_KEY=simulation_mode
VITE_IFLYTEK_API_SECRET=simulation_mode

# 讯飞星火模型版本
VITE_IFLYTEK_MODEL_VERSION=v3.5

# 多模态功能配置
VITE_ENABLE_MULTIMODAL=true
VITE_ENABLE_VOICE_RECOGNITION=true
VITE_ENABLE_VIDEO_ANALYSIS=false
VITE_ENABLE_REAL_TIME_ANALYSIS=true

# 面试系统配置
VITE_INTERVIEW_SESSION_TIMEOUT=3600000
VITE_MAX_QUESTION_COUNT=10
VITE_DEFAULT_INTERVIEW_DOMAIN=comprehensive

# 开发模式配置
VITE_DEBUG_MODE=true
VITE_MOCK_API_RESPONSES=true
